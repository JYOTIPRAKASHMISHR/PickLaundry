<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Myrequest">

    <!-- Top Card with Title and Logo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFEB3B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="🛒 My Order"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/splashscreen"
                android:contentDescription="App Logo"
                android:layout_marginEnd="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Order Details Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/orderDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"

                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/Emerald" />

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📦 Order ID:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- Item Details -->
                    <TextView
                        android:id="@+id/tvPants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👔 Pants: "
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvShirts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👕 Shirts: 0"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🧥 Others: 0"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tvSneakers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sneakers: 0"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvLeatherShoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leather Shoes: 0"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSuedeShoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suede Shoes: 0"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />


                    <TextView
                        android:id="@+id/tvTotalPieces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 Total Pieces: 0"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💰 Total Price: ₹0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Address:"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📧 Email: "
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👨 Gender:"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 Mobile: "
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🙋 Name: "
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:onClick="cancel"
                        android:textSize="16sp"
                        android:textColor="#FF0000"
                        android:textStyle="bold"

                        android:layout_marginTop="8dp"
                        android:layout_gravity="end"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Order Tracking Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/orderTrackingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvOrderTrackingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🚚 Order Tracking"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <!-- Order Status List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tvOrderSuccessful"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✔️ Order Successful"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvOrderConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✅ Order Confirmed"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvOutForPickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚴 Out for Pickup"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvOutForDelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🚚 Out for Delivery"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvPaymentSuccessful"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💳 Payment Successful"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvDelivered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📦 Delivered"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
